                android:layout_height="wrap_content"
                android:text="Total price:"
                android:textColor="@color/black"
                android:fontFamily="@font/baloo"
                android:textSize="15sp"
                android:layout_marginRight="50dp"
                />

            <TextView
                android:id="@+id/txtSumPrice"
